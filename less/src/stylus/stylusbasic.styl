font-size = 24px
color = blue
name = stylus

// 投影
boxshadow(shadow = 0px 0px 10px darken(color, 10%) inset){
  box-shadow: shadow;
}

// 圆角
.border-radius
  -webkit-border-radius: 6px
  border-radius: 6px

grow(){
  width: 160px;
	height: 30px;
	line-height: 30px;
	text-align: center;
	display: block;
  transition: all .3s;
  color: #fff;
	&:hover{
		transform: scale(1.1);
  }
}

/* stylus */
.{name}{
  padding: 20px;
  height: 400px;
  background: #fff;
  boxshadow();
  @extend .border-radius;
  h3{
    text-align: center;
    font-size: font-size;
    color: color;
  }
  .{name}-grow{
    margin-top: 20px;
    background: color;
    grow();
    @extend .border-radius;
    &:hover{
      background: darken(color, 5%);
    }
  }

  dl{
    margin-top: 20px;
    for index in 1 2 3 4{
      dd:nth-child({index}){
        position: relative;
        padding-left: 30px;
        line-height: 30px;
        &:before{
          content: '' + index;
          position: absolute;
          left: 0;
          top: 0;
          width: 20px;
          height: 30px;
          line-height: 30px;
          text-align: center;
          color: color;
        }
        if index == 2 {
          color = red;
          &:before{
            font-size: 30px;
            color: color;
          }
        }
      }
    }   
  }

}

